<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            
            
            
    <!--  TAB 1: LOAD MARKER -->
	<LinearLayout android:orientation="vertical" android:id="@+id/LoadMarkerTab"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:padding="25px">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/LoadMarkerTitle"
			android:layout_gravity="left" android:layout_marginBottom="10dip"
			android:layout_marginTop="25dip" android:textSize="14sp" android:textStyle="bold"/>
			
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/LoadMarkerText"
			android:layout_gravity="center" android:layout_marginBottom="25dip"
			android:textSize="12sp"/>
	
		<Button android:id="@+id/newMarkerButton" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/newMarker" />
			
		<Button android:id="@+id/fromFileButton" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/fromFile" />
	</LinearLayout>
	
           
            
            
   <!--  TAB 2: VIEW MARKER -->
            <LinearLayout android:orientation="vertical" android:id="@+id/ViewMarkerTab"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:padding="25px">

		<ImageView android:id="@+id/imageDisplay" android:layout_width="fill_parent"
			android:layout_height="wrap_content"  android:layout_marginTop="30px"
			android:layout_marginBottom="30px"/>

		<Button android:id="@+id/useMarkerButton" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/useMarker" />
	
	</LinearLayout>
   <!--  TAB 3: INFO MARKER -->         
                        <LinearLayout android:orientation="vertical" android:id="@+id/InfoMarkerTab"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:padding="25px">

		<ImageView android:id="@+id/featuresDisplay" android:layout_width="fill_parent"
			android:layout_height="wrap_content"  android:layout_marginTop="30px"
			android:layout_marginBottom="30px"/>
			
		<TextView android:id="@+id/infoFilename" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/infoFilename"
			android:layout_gravity="left" 
			android:layout_marginTop="15px" android:textSize="14sp" android:textStyle="bold"/>
		
		<TextView android:id="@+id/infoDetectionMethod" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/infoDetectionMethod"
			android:layout_gravity="left" 
			android:layout_marginTop="15px" android:textSize="14sp" android:textStyle="bold"/>		
		
		<TextView android:id="@+id/infoNumberOfFeatures" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/infoNumberOfFeatures"
			android:layout_gravity="left" android:layout_marginTop="15px"
			 android:textSize="14sp" android:textStyle="bold"/>
			 
		<TextView android:id="@+id/infoFeatureDistribuition" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/infoFeatureDistribuition"
			android:layout_gravity="left" android:layout_marginTop="15px"
			 android:textSize="14sp" android:textStyle="bold"/>	
			 
		<Button android:id="@+id/deleteMarkerButton" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/deleteMarker"
			android:layout_marginTop="15px" />
		
                </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</TabHost>