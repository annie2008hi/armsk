<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/background_main" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:padding="50dip"
	android:orientation="horizontal">
	<LinearLayout android:orientation="vertical"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_gravity="center">

		<Button android:id="@+id/start_armsk_button" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/start_armsk" android:layout_marginTop="300px"/>
		<Button android:id="@+id/choose_marker_button" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/choose_marker" />
		<Button android:id="@+id/instructions_button" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/instructions_label" />

		<Button android:id="@+id/exit_button" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/exit_label" />  
	</LinearLayout>
	
</LinearLayout>
